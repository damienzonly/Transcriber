#!/bin/bash

SCRIPTPATH=$(dirname $(readlink -f $0))
cd $SCRIPTPATH
which python3 > /dev/null
if [ $? != 0 ]; then
    brew install python3
fi

which pyenv > /dev/null
if [ $? != 0 ]; then
    brew install pyenv
fi

if [ ! -d venv ]; then
    python3 -m venv venv
    source venv/bin/activate
    pip3 install -r requirements.txt
else
    source venv/bin/activate
fi

python3 Transcriber.py